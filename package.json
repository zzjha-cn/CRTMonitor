{
  "name": "cr-ticket-monitor",
  "type": "module",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "tsx src/index.ts",
    "cli": "npm run build && node dist/cli.js",
    "cli:dev": "tsx src/cli.ts",
    "build-win": "npm run build-pack && npm run build-generate-blob && npm run build-inject-win",
    "build-pack": "esbuild dist/index.js --bundle --platform=node --outfile=dist/bundle.cjs",
    "build-generate-blob": "node --experimental-sea-config sea-config.json",
    "build-inject-win": "node -e \"require('fs').copyFileSync(process.execPath, 'dist/CRTM.exe')\" && npx postject dist/CRTM.exe NODE_SEA_BLOB dist/sea-prep.blob --sentinel-fuse NODE_SEA_FUSE_fce680ab2cc467b6e072b8b5df1996b2"
  },
  "author": "BobLiu&Wxory",
  "license": "GPL-2.0-only",
  "description": "12306 余票监控程序",
  "dependencies": {
    "chalk": "^5.3.0",
    "chalk-table": "^1.0.2",
    "inquirer": "^12.6.3",
    "js-yaml": "^4.1.0",
    "moment": "^2.30.1",
    "nodemailer": "^7.0.4"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.19",
    "esbuild": "^0.24.0",
    "postject": "^1.0.0-alpha.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.12.0"
  }
}
